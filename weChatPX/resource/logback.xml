<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<substitutionProperty name="log.base" value="../logs/appServer" />
	<jmxConfigurator />
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">

		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</layout>
	</appender>

	<appender name="appServer"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- 设置打印级别 -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level value="DEBUG" />
		</filter>
		<!--<filter class="ch.qos.logback.core.filter.EvaluatorFilter"> <evaluator 
			name="myEval_service"> <expression>message.contains("action")</expression> 
			</evaluator> <onMatch>ACCEPT</onMatch> <onMismatch>DENY</onMismatch> </filter> -->
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<charset>UTF-8</charset>
		</encoder>
		<File>${log.base}_server.log</File>
		<!-- 保存日记最大数量30 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.base}.%d{yyyy-MM-dd}_action.log
			</FileNamePattern>
			<maxHistory>30</maxHistory>
			<!-- 设置日记文件大小 -->
			<triggeringPolicy
				class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
				<maxFileSize>20MB</maxFileSize>
			</triggeringPolicy>
		</rollingPolicy>

		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</layout>
	</appender>

	<logger name="com.krakentouch.weChat" addtivity="false">
		<level value="DEBUG" />
		<appender-ref ref="appServer" />
	</logger>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="stdout" />
	</root>
</configuration> 